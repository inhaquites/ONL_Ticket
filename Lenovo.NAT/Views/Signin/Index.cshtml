@using Lenovo.NAT.Infrastructure.Entities;
@using Microsoft.AspNetCore.Identity;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en-us" id="lock-page">
<head>
    <meta charset="utf-8">
    <title>Lenovo ThinkTool</title>
    <link rel="shortcut icon" href="~/content/Images/Lenovo-favicon.ico" type="image/x-icon" />
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- iOS web-app metas : hides Safari UI Components and Changes Status Bar Appearance -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="~/css/Signin.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

</head>
<body>

    <div class="login-container">
        <form action="@Url.Action("index", "home")">
            <img src="~/content/Images/Lenovo-Logo.png" alt="Lenovo Logo" />
            <div class="title">Lenovo ThinkTool</div>

            <div class="mb-3 text-start">
                <label for="Student" class="form-label">Domain\user:</label>
                <input class="form-control" name="Student" id="Student" type="text" value="@User.Identity?.Name" readonly />
            </div>

            <a id="btnSignin" class="btn btn-login btn-lg w-100" href="@Url.Action("login", "signin")">
                <i class="fa fa-key me-2"></i> Single Sign-On
            </a>

            <p class="footer">Copyright Lenovo @DateTime.UtcNow.AddHours(-3).Year</p>
        </form>
    </div>

</body>
</html>
