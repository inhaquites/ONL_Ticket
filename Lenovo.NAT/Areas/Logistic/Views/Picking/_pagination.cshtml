@using Lenovo.NAT.ViewModel.Logistic.Picking
@model PickingFilter

Total of @Model.PaginationInfo.TotalItems

<nav aria-label="Page navigation">

    <ul class="pagination justify-content-end">

        <li class="page-item" style="margin-left: 10px;">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end">

                    <li class="page-item disabled">
                        <a class="page-link" href="#">
                            Items per page
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" id="Items10" asp-area="Logistic" asp-controller="Picking" asp-action="Index" asp-route-pageSize=10 aria-label="10">10</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" id="Items25" asp-area="Logistic" asp-controller="Picking" asp-action="Index" asp-route-pageSize=25 aria-label="10">25</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" id="Items50" asp-area="Logistic" asp-controller="Picking" asp-action="Index" asp-route-pageSize=50 aria-label="10">50</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" id="Items100" asp-area="Logistic" asp-controller="Picking" asp-action="Index" asp-route-pageSize=100 aria-label="10">100</a>
                    </li>
                </ul>
            </nav>
        </li>

        <li class="page-item" style="margin-left: 10px;">

            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-end">
                    <li class="page-item">
                        <a class="page-link @Model.PaginationInfo.Previous"
                           id="Previous"
                           asp-area="Logistic"
                           asp-controller="Picking"
                           asp-action="Index"
                           asp-route-page="@(Model.PaginationInfo.Page -1)"
                           asp-route-pageSize="@Model.PaginationInfo.PageSize"
                           aria-label="Previous">
                            Previous
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <a class="page-link" href="#">
                            Page @(Model.PaginationInfo.Page + 1) of @Model.PaginationInfo.TotalPages
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link @Model.PaginationInfo.Next"
                           id="Next"
                           asp-area="Logistic"
                           asp-controller="Picking"
                           asp-action="Index"
                           asp-route-page="@(Model.PaginationInfo.Page + 1)"
                           asp-route-pageSize="@Model.PaginationInfo.PageSize"
                           aria-label="Next">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        </li>
    </ul>
</nav>

